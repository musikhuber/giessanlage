#!/bin/bash



DOJOB=/usr/local/bin/dojob
MAIL=/usr/bin/mail
EMPFAENGER="bernhard.huber@bhct.de 01759907461@t-mobile-sms.de bernie@bwan.de ggnagel@hotmail.de"

echo "Giesse Tomatenhaus\n";
sleep 5; 
$DOJOB -c1 -t 599 -f 500;
logger "Tomatenhaus gegossen ";

echo "Giesse Kaminholz\n";
sleep 5; 
$DOJOB -c4 -t 100 -f 500;
if [ $? -eq 2 ]; then
  echo "Kein Wasser mehr in der Tonne?" | mail -s "Giessanlagenfehler" $EMPFAENGER;
  exit 2;
fi
logger "Kaminholz gegossen ";

#echo "Giesse Erdbeeren\n";
#sleep 5; 
#$DOJOB -c3 -t60 -f 500;
#logger "Erdbeeren gegossen ";

echo "Giesse Kraeuterschnecke\n";
sleep 5; 
$DOJOB -c5 -t350 -f500;
if [ $? -eq 2 ]; then
  echo "Kein Wasser mehr in der Tonne?" | mail -s "Giessanlagenfehler" $EMPFAENGER;
  exit 2;
fi
logger "Kraeuterschnecke gegossen ";

logger "Alles gegossen";

exit 0;

