#!/bin/bash



DOJOB=/usr/local/bin/dojob
MAIL=/usr/bin/mail
EMPFAENGER="bernhard.huber@bhct.de 01759907461@t-mobile-sms.de bernie@bwan.de"

echo "Giesse Tomatenhaus\n";
sleep 5; 
$DOJOB -c1 -t 500 -f 150;

echo "Giesse Kaminholz\n";
sleep 5; 
$DOJOB -c2 -m 4 -f 250;
if [ $? -eq 2 ]; then
  echo "Kein Wasser mehr in der Tonne?" | mail -s "Giessanlagenfehler" $EMPFAENGER;
  exit 2;
fi

echo "Giesse Erdbeeren\n";
sleep 5; 
$DOJOB -c3 -t250 -f 140;

echo "Giesse Kraeuterschnecke\n";
sleep 5; 
$DOJOB -c5 -t10 -f500;
if [ $? -eq 2 ]; then
  echo "Kein Wasser mehr in der Tonne?" | mail -s "Giessanlagenfehler" $EMPFAENGER;
  exit 2;
fi

exit 0;

